<openerp>
    <data>
        <template id="rapport_paie_view" inherit_id="hr_payroll.report_payslip">
            <xpath expr="//table[@class='table table-condensed']//thead//tr" position="replace">
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Rate</th>
                    <!-- SÃ©paration de Quantity et Rate -->
                    <th>Amount</th>
                    <th>Total</th>
                </tr>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr//td[1]" position="replace"/>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr//td[1]" position="replace">
                <t t-if="'TOTAL' in p.name">
                    <td>
                        <strong>
                            <span t-field="p.name"/>
                        </strong>
                    </td>
                </t>
                <t t-if="'TOTAL' not in p.name">
                    <td>
                        <span t-field="p.name"/>
                    </td>
                </t>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr//td[2]" position="after">
                <t t-if="'TOTAL' in p.name">
                    <td>
                        <strong>
                            <span t-field="p.amount_percentage"/>
                        </strong>
                    </td>
                </t>
                <t t-if="'TOTAL' not in p.name">
                    <td>
                        <span t-field="p.amount_percentage"/>
                    </td>
                </t>
            </xpath>
        </template>
    </data>
</openerp>