<openerp>
    <data>
        <template id="rapport_paie_view" inherit_id="hr_payroll.report_payslip">
            <xpath expr="//table[@class='table table-condensed']//thead//tr" position="replace">
                <tr>
                    <strong>Titre du tableau BRUT</strong>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Rate</th>
                    <!-- Séparation de Quantity et Rate -->
                    <th>Amount</th>
                    <th>Total</th>
                </tr>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr" position="replace">
                <t t-as="p" t-foreach="get_payslip_lines(o.line_ids)">
                    <tr>
                        <t t-if="'TOTAL' in p.name">
                            <td>
                                <strong>
                                    <span style="background-color:lightgray;" t-field="p.name"/>
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    <span t-field="p.quantity"/>
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    <span t-field="p.amount_percentage"/>
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    <span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/>
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    <span t-esc="formatLang(p.total, currency_obj=o.company_id.currency_id)"/>
                                </strong>
                            </td>
                        </t>
                        <t t-if="'TOTAL' not in p.name">
                            <td>
                                <span t-field="p.name"/>
                            </td>
                            <td>
                                <span t-field="p.quantity"/>
                            </td>
                            <td>
                                <span t-field="p.amount_percentage"/>
                            </td>
                            <td>
                                <span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/>
                            </td>
                            <td>
                                <span t-esc="formatLang(p.total, currency_obj=o.company_id.currency_id)"/>
                            </td>
                        </t>
                    </tr>
                    <t t-if="'TOTAL' in p.name">
                        <thead>
                            <tr>
                                <td>
                                    <t t-if="p.name == 'TOTAL BRUT'">
                                        <strong>Titre du tableau CPS</strong>
                                    </t>
                                    <t t-if="p.name == 'TOTAL CPS'">
                                        <strong>Titre du tableau C.S.T</strong>
                                    </t>
                                    <t t-if="p.name == 'TOTAL C.S.T'">
                                        <strong>Titre du tableau NET</strong>
                                    </t>
                                    <t t-if="p.name == 'TOTAL NET'">
                                        <strong>Titre du tableau patronale</strong>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Rate</th>
                                <!-- Séparation de Quantity et Rate -->
                                <th>Amount</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</openerp>