    <data>
        <template id="rapport_paie_view" inherit_id="hr_payroll.report_payslip">
            <xpath expr="//table[@class='table table-condensed']//thead//tr" position="replace">
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Rate</th> <!-- SÃ©paration de Quantity et Rate -->
                    <th>Amount</th>
                    <th>Total</th>
                </tr>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr//td[1]" position="replace"/>
            <xpath expr="//table[@class='table table-condensed']//tbody//tr//td[3]" position="after">
                <td><span t-field="p.rate"/></td>
            </xpath>
        </template>
    </data>
</openerp>